<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
  http://www.liquibase.org/xml/ns/dbchangelog
  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="post" author="Mikhail Popov">
        <createTable tableName="post">
            <column name="id" type="uuid">
                <constraints unique="true"/>
            </column>
            <column name="isDeleted" type="boolean"> </column>
            <column name="authorId" type="varchar(255)"> </column>
            <column name="time" type="datetime"> </column>
            <column name="itemId" type="varchar(255)"> </column>
            <column name="type" type="varchar(255)"> </column>
            <column name="reactionType" type="varchar(255)"> </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="post" baseColumnNames="" constraintName="tags" referencedTableName=""
                                 referencedColumnNames=""/>
    </changeSet>
</databaseChangeLog>
